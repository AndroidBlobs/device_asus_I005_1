<Included>
    <Decoders>
        <!-- ASUS BSP : OZO porting -->
        <MediaCodec name="c2.nokia.ozoaudio.decoder" type="audio/ozoaudio">
            <Alias name="OMX.nokia.ozoaudio.decoder" />
            <Limit name="channel-count" max="8" />
            <Limit name="sample-rate" ranges="48000" />
            <Limit name="bitrate" range="8000-960000" />
        </MediaCodec>
        <!-- ASUS BSP : OZO porting -->
    </Decoders>
    <Encoders>
        <!-- ASUS BSP : OZO porting -->
        <MediaCodec name="c2.nokia.ozoaudio.encoder" type="audio/ozoaudio">
            <Alias name="OMX.nokia.ozoaudio.encoder" />
            <Limit name="sample-rate" ranges="48000" />
            <Limit name="bitrate" range="128000-960000" />
        </MediaCodec>
        <!-- ASUS BSP : OZO porting -->
    </Encoders>
</Included>
